<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="@dimen/bj_300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_sty"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/bj_20dp">

        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_60dp"
            android:background="@drawable/dialog_sty_rl">

            <TextView
                android:id="@+id/tv_cencl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/bj_5dp"
                android:text="提示信息"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bj_10dp">

            <TextView
                android:id="@+id/tv_cencls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_60dp"
                android:gravity="center"
                android:text="网络连接失败 请重新连接..."
                android:textColor="@color/color_2B2B2B"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/bj_20dp"
                android:layout_marginRight="@dimen/bj_20dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_clecn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/bj_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt_post"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:text="重新连接"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>