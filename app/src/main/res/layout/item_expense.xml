<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_doctor_advice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/bj_20dp"
    android:layout_marginRight="@dimen/bj_20dp"
    android:layout_marginTop="@dimen/bj_20dp"
    android:background="@drawable/record_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_60dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住院时间: "
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/bj_100dp"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="住院科室 : "-->
                <!--android:textColor="@color/color_2B2B2B"-->
                <!--android:textSize="30sp" />-->

            <!--<TextView-->
                <!--android:id="@+id/tv_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text=""-->
                <!--android:textColor="@color/color_2B2B2B"-->
                <!--android:textSize="30sp" />-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交费 : "
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_alreadypaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额 : "
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FBD4B3"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/bj_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/color_2B2B2B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/bj_2dp"
            android:layout_height="match_parent"
            android:background="#D0D0D0" />

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="收费项目"
            android:textColor="@color/color_2B2B2B"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/bj_2dp"
            android:layout_height="match_parent"
            android:background="#D0D0D0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="单位"
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/bj_2dp"
                android:layout_height="match_parent"
                android:background="#D0D0D0" />

            <TextView
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="单价"
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/bj_2dp"
                android:layout_height="match_parent"
                android:background="#D0D0D0" />

            <TextView
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/bj_2dp"
                android:layout_height="match_parent"
                android:background="#D0D0D0" />

            <TextView
                android:layout_width="@dimen/bj_150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="金额"
                android:textColor="@color/color_2B2B2B"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_2dp"
        android:background="#D0D0D0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:background="#B6DEE8"
        android:layout_marginBottom="@dimen/bj_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_60dp"
        android:orientation="horizontal">


        <TextView
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="@color/color_2B2B2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_toLeftOf="@+id/tv_totalCostOfDay"
            android:text="当天费用: " />


        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_50dp"
            android:textSize="30sp"
            android:textColor="@color/color_2B2B2B"
            android:id="@+id/tv_totalCostOfDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="" />


    </RelativeLayout>

</LinearLayout>


